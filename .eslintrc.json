{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "brace-style": [
        "error",
        "stroustrup"
    ],
    "comma-dangle": [
        "error",
        "never"
    ],
    "no-unused-vars": [
        "warn"
    ],
    "no-var": [
        "off"
    ],
    "one-var": [
        "off"
    ],
    "no-extend-native": [
      "error",
      {
        "exceptions": ["String"]
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["app.js", "**/*.test.ts", "**/*.test.tsx"]
      }
    ]
  }
}
