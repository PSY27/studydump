.app-sidebar__overlay(data-toggle="sidebar")
aside.app-sidebar

	.app-sidebar__user
		img.app-sidebar__user-avatar(src='/images/icons/profile.png', width="20%", alt='User Image')
		div
			p.app-sidebar__user-name#activeUser
			p.app-sidebar__user-designation studyDump Admin

	ul.app-menu
		li
			a.app-menu__item(href='/admin' class={'active': activePage == 'dashboard'})
				i.app-menu__icon.fa.fa-dashboard
				span.app-menu__label Dashboard

		li
			a.app-menu__item(href='/admin/view' class={'active': activePage == 'view'})
				i.app-menu__icon.fa.fa-database
				span.app-menu__label View Records
				
		li
			a.app-menu__item(href='/admin/audit' class={'active': activePage == 'audit'})
				i.app-menu__icon.fa.fa-archive
				span.app-menu__label Reported Records

script(src='/js/jquery-3.2.1.min.js')
script(src='https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js')

script(type="text/javascript").
	$('#activeUser').text(Cookies.get("activeUser"));
